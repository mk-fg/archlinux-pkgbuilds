pkgname=log_proxy
pkgver=0.7.1
pkgrel=1
pkgdesc="Tiny C log rotation utility for apps that write their logs to stdout/stderr."
arch=(x86_64)
url=https://github.com/metwork-framework/log_proxy
license=(BSD-3)
depends=(glib2)
source=($pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz)
b2sums=(86ca9ebd47cc15aadfb2cf0e36f2151bcde453498d7bfda10823e18722eecc8484730bc3c9b53cf35c7205e975b1e7719f21d3aafedaf24e3a5f30074091cbab)

build() {
	cd $pkgname-$pkgver
	make
}

package() {
	cd $pkgname-$pkgver
	make PREFIX=/usr DESTDIR="$pkgdir" install
}
