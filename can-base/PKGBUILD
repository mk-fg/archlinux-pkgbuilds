pkgname=can-base
pkgver=3
pkgrel=7
pkgdesc="meta-package with base system for container machine."
arch=(any)

depends=(
	bash
	bzip2
	coreutils
	diffutils
	file
	filesystem
	findutils
	gawk
	gcc-libs
	gettext
	glibc
	grep
	gzip
	iproute2
	iputils
	less
	licenses
	logrotate
	man-db
	man-pages
	nano
	pacman
	perl
	procps-ng
	psmisc
	sed
	shadow
	sysfsutils
	systemd-sysvcompat
	tar
	texinfo
	util-linux
	which
)

provides=()
conflicts=()
replaces=()

install=can-base.install


package() {
	cd "$pkgdir"

	# Create explicit veth unit instead of default ones, to e.g. assign IP there later
	mkdir -p etc/systemd/network
	cat >etc/systemd/network/66-ve-host.network <<EOF
[Match]
Name=host*
Virtualization=container

[Network]
DHCP=yes

# Address=10.0.10.15/24
# Address=fddd::10:15/104
# Gateway=10.0.10.1
# Gateway=fddd::10:1
# DNS=10.0.10.1
# DNS=fddd::10:1
EOF
	ln -s /dev/null etc/systemd/network/80-container-host0.network
	ln -s /dev/null etc/systemd/network/80-container-ve.network

}
