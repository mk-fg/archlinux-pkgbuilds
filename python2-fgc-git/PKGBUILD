_p=fgc

pkgname=python2-${_p}-git
pkgver=15.02.2
pkgrel=1
pkgdesc='Misc py stdlib extensions.'
arch=(any)
url="https://github.com/mk-fg/${_p}"
license=(WTFPL)
depends=(python2)
makedepends=(git python2-setuptools)
options=(!emptydirs)
source=("${_p}::git+${url}")
md5sums=(SKIP)

pkgver() {
	cd "${_p}"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	cd "${srcdir}/${_p}"
	python2 setup.py install --prefix=/usr --root="${pkgdir}/" --optimize=1
}
