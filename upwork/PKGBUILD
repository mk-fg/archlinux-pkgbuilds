_p=upwork

pkgname=${_p}
pkgver=5.1.0.562
pkgrel=1
pkgdesc="Upwork Team App."
arch=(x86_64)
url="https://www.upwork.com/downloads/new-team-application"
license=(unknown)
depends=(alsa-lib gconf gdk-pixbuf2 gtk2 libxss libxtst nss)
options=(!emptydirs)
install=
source=('https://updates-desktopapp.upwork.com/binaries/v5_1_0_562_f3wgs5ljinabm69t/upwork_5.1.0.562_amd64.deb')
sha256sums=(af70dae3d1cd5910d3ab591201caf75b13758d12e487b44cd32452c305df68c0)

prepare() {
	cd "${srcdir}"
	tar -xf "${srcdir}/data.tar.xz"
}

package() {
	cd "${srcdir}"
	mv usr/bin/upwork usr/share/upwork/upwork.wrapper
	cp -rp usr "${pkgdir}/usr"
}
