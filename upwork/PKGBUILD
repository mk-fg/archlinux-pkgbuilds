_p=upwork

pkgname=${_p}
pkgver=5_1_0_647
pkgrel=1
pkgdesc="Upwork Team App."
arch=(x86_64)
url="https://www.upwork.com/downloads/new-team-application"
license=(unknown)
depends=(alsa-lib gconf gdk-pixbuf2 gtk2 libxss libxtst nss)
options=(!emptydirs)
install=
source=('https://updates-desktopapp.upwork.com/binaries/v5_1_0_647_g0nxmj7uab8q069t/upwork_5.1.0.647_amd64.deb')
sha256sums=(d57be63e72ba06965cbca81bd419a67badebe21b1b9504945ce24fd01eb9b5b6)

prepare() {
	cd "${srcdir}"
	tar -xf "${srcdir}/data.tar.xz"
}

package() {
	cd "${srcdir}"
	mv usr/bin/upwork usr/share/upwork/upwork.wrapper
	cp -rp usr "${pkgdir}/usr"
}
